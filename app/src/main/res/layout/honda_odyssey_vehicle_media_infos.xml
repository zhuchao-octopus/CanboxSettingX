<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/infos"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="20px"
    android:paddingTop="20px">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0.0dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="60px"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingLeft="20px" >

                <ImageView
                    android:id="@+id/bt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/bt_icon"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/signal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_42"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/battery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_48"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingRight="20px" >

                <TextView
                    style="@style/AirButtonStyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="@string/original_car_sound" />

                <TextView
                    android:id="@+id/vol"
                    style="@style/AirButtonStyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="0px"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="0.0dip"
                android:layout_weight="1.5"
                android:orientation="vertical" >

                <com.common.view.MarqueeTextView
                    android:id="@+id/cmd_id_menu_item"
                    style="@style/WhiteBigText"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1"
                    android:gravity="center" />

                <com.common.view.MarqueeTextView
                    android:id="@+id/cmd_id_menu_item_line_a"
                    style="@style/WhiteSmallText"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1"
                    android:gravity="center" />

                <com.common.view.MarqueeTextView
                    android:id="@+id/cmd_id_menu_item_line_b"
                    style="@style/WhiteSmallText"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1"
                    android:gravity="center" />

                <com.common.view.MarqueeTextView
                    android:id="@+id/cmd_id_menu_item_line_c"
                    style="@style/WhiteSmallText"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginTop="0.0dip"
                android:layout_weight="1"
                android:background="@drawable/air_back2"
                android:orientation="vertical" >

                <TextView
                    style="@style/AirButtonStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="RADIO" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_marginTop="0.0dip"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/st"
                        style="@style/AirButtonStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="ST"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/auto_select"
                        style="@style/AirButtonStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="Auto Select"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/scan"
                        style="@style/AirButtonStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="SCAN"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5px"
                android:layout_marginTop="0.0dip"
                android:layout_weight="1"
                android:background="@drawable/air_back2"
                android:orientation="vertical" >

                <TextView
                    style="@style/AirButtonStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="CD" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_marginTop="0.0dip"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/cd_play_status"
                        style="@style/AirButtonStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@null" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5px"
                android:layout_marginTop="0.0dip"
                android:layout_weight="1"
                android:background="@drawable/air_back2"
                android:orientation="vertical" >

                <TextView
                    style="@style/AirButtonStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="1"
                    android:text="USB" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0px"
                    android:layout_marginTop="0.0dip"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/usb_status"
                        style="@style/AirButtonStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="USB"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/usb_play_status"
                        style="@style/AirButtonStyle1"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@null" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_gravity="center"
            android:layout_marginTop="5px" >

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/media2"
                android:textSize="24px" />

            <TextView
                android:id="@+id/source1"
                style="@style/AirButtonStyle1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/odyssey1" />

            <TextView
                android:id="@+id/source2"
                style="@style/AirButtonStyle1"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/odyssey2" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
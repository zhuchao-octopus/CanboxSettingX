<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/pop_window"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="330px"
        android:layout_height="243px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/car_info_bottom_height"
        android:layout_marginLeft="@dimen/pop_menu_x"
        android:background="@drawable/dialog"
        android:orientation="vertical"
        android:paddingBottom="16.0px"
        android:paddingLeft="10.0px"
        android:paddingRight="18.0px"
        android:paddingTop="4.0dip">

        <ListView
            android:id="@id/pop_views"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none" />
    </LinearLayout>

</RelativeLayout>
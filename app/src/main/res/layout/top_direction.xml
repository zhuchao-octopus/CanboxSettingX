<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/top_direction"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingLeft="20px"
    android:paddingRight="20px" >

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@id/bt_left"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/pre_normal"
            android:tag="ak_paramter=100,50"
            android:text="@string/left"
            android:textSize="@dimen/conv_normal_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/since_start"
            android:textSize="@dimen/conv_title_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@id/bt_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/next_normal"
            android:tag="ak_paramter=100,50"
            android:text="@string/right"
            android:textSize="@dimen/conv_normal_text_size" />
    </LinearLayout>

</LinearLayout>
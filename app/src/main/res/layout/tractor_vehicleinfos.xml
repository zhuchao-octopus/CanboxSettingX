<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:vehicle="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/time"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="9.0"
        android:gravity="bottom|center"
        android:paddingBottom="15.0px"
        android:text="00:00"
        android:textColor="@android:color/white"
        android:textSize="30.0px" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="37.0"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="28.0px"
        android:paddingRight="28.0px">

        <RelativeLayout
            android:layout_width="368px"
            android:layout_height="368px">

            <com.common.view.CircularRingPercentageView
                android:id="@+id/dashboard_1"
                android:layout_width="368px"
                android:layout_height="368px"
                vehicle:circleRadiu="368px"
                vehicle:dashWidth="40"
                vehicle:firstColor="#154286"
                vehicle:outCircleColor="#ffffff"
                vehicle:secondColor="#fdd979"
                vehicle:top_arc_count="30"
                vehicle:top_arc_degree_end="40"
                vehicle:top_arc_degree_start="140"
                vehicle:top_arc_value_count="7"
                vehicle:top_arc_value_max="30"
                vehicle:top_arc_value_min="0" />

            <com.common.view.CircularRingBottomView
                android:id="@+id/dashboard_12"
                android:layout_width="368px"
                android:layout_height="368px"
                vehicle:circleRadiu="368px"
                vehicle:dashWidth="30"
                vehicle:firstColor="#154286"
                vehicle:outCircleColor="#ffffff"
                vehicle:secondColor="#49b6ef"
                vehicle:top_arc_count="10"
                vehicle:top_arc_degree_end="130"
                vehicle:top_arc_degree_start="50"
                vehicle:top_arc_value_max="1"
                vehicle:top_arc_value_min="0" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240px"
                android:gravity="center"
                android:text="x100 rpm"
                android:textColor="@android:color/white"
                android:textSize="20.0px" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="280px"
                android:gravity="center"
                android:text="@string/torque_ratio"
                android:textColor="@android:color/white"
                android:textSize="20.0px" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/center_container"
            android:layout_width="190.0px"
            android:layout_height="228.0dip"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:gravity="bottom|center"
                    android:text="@string/volt"
                    android:textColor="@android:color/white"
                    android:textSize="20.0px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/volt"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center|top"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="20.0px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:gravity="bottom|center"
                    android:text="@string/engine_working_time"
                    android:textColor="@android:color/white"
                    android:textSize="20.0px" />

                <TextView
                    android:id="@+id/engine_working_time"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center|top"
                    android:text="0h"
                    android:textColor="@android:color/white"
                    android:textSize="20.0px" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <!-- <TextView -->
                <!-- android:id="@+id/ehr" -->
                <!-- android:layout_width="fill_parent" -->
                <!-- android:layout_height="0.0dip" -->
                <!-- android:layout_weight="1.0" -->
                <!-- android:gravity="bottom|center" -->
                <!-- android:text="@string/ehr" -->
                <!-- android:textColor="@android:color/white" -->
                <!-- android:textSize="20.0px" -->
                <!-- android:visibility="invisible" /> -->

                <TextView
                    android:id="@+id/ehr_state"
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center|top"
                    android:textColor="@android:color/white"
                    android:textSize="20.0px"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/ehr_volt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="20.0px"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="368px"
            android:layout_height="368px">

            <com.common.view.CircularRingPercentageView
                android:id="@+id/dashboard_2"
                android:layout_width="368px"
                android:layout_height="368px"
                vehicle:circleRadiu="368px"
                vehicle:dashWidth="40"
                vehicle:firstColor="#154286"
                vehicle:outCircleColor="#ffffff"
                vehicle:secondColor="#fdd979"
                vehicle:top_arc_count="30"
                vehicle:top_arc_degree_end="40"
                vehicle:top_arc_degree_start="140"
                vehicle:top_arc_value_count="5"
                vehicle:top_arc_value_max="120"
                vehicle:top_arc_value_min="40" />

            <com.common.view.CircularRingBottomView
                android:id="@+id/dashboard_22"
                android:layout_width="368px"
                android:layout_height="368px"
                vehicle:circleRadiu="368px"
                vehicle:dashWidth="30"
                vehicle:firstColor="#154286"
                vehicle:outCircleColor="#ffffff"
                vehicle:secondColor="#49b6ef"
                vehicle:top_arc_count="10"
                vehicle:top_arc_degree_end="130"
                vehicle:top_arc_degree_start="50"
                vehicle:top_arc_value_max="10"
                vehicle:top_arc_value_min="0" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80px"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/icon_temperature"
                android:text="x100 rpm"
                android:textSize="20.0px" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240px"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/icon_oil_pressure"
                android:text="x100 rpm"
                android:textSize="20.0px" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="280px"
                android:gravity="center"
                android:text="x100 kpa"
                android:textColor="@android:color/white"
                android:textSize="20.0px" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="14.0">

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="70.0dip"
            android:layout_marginBottom="36.0dip"
            android:background="@drawable/btn_home_normal"
            android:tag="ak_paramter=100,50" />
    </RelativeLayout>

</LinearLayout>
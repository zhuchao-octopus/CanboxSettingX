<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/vehicle_tmps"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/content_padding_left"
    android:paddingTop="40px"
    android:paddingBottom="20px">

    <TextView
        android:id="@id/tmps"
        android:layout_width="400.0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/tpms_content"
        android:textSize="@dimen/conv_normal_text_size" />

    <Button
        android:id="@id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/warning"
        android:minWidth="@dimen/btn_width"
        android:text="@string/set"
        android:textSize="@dimen/conv_normal_text_size" />

</RelativeLayout>